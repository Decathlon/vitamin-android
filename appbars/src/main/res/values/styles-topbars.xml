<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Vitamin.AppBarLayout" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/vtmnBackgroundPrimary</item>
    </style>

    <style name="Widget.Vitamin.TopBar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:background">?attr/vtmnBackgroundPrimary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Vitamin.TopBar</item>
    </style>

    <style name="ThemeOverlay.Vitamin.TopBar" parent="">
        <item name="colorOnPrimary">?attr/vtmnContentPrimary</item>
    </style>

    <!-- Contextual menu integrated in the Toolbar -->
    <eat-comment />

    <style name="Widget.Vitamin.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/vtmnContentActive</item>
        <item name="backgroundSplit">?attr/vtmnContentActive</item>
        <item name="titleTextStyle">@style/TextAppearance.Vitamin.ActionMode.TopBar.Title</item>
        <item name="subtitleTextStyle">
            @style/TextAppearance.Vitamin.ActionMode.TopBar.Subtitle
        </item>
    </style>

    <style name="TextAppearance.Vitamin.ActionMode.TopBar.Title" parent="@style/TextAppearance.Vitamin.Headline6">
        <item name="android:textColor">?attr/vtmnContentPrimaryReversed</item>
    </style>

    <style name="TextAppearance.Vitamin.ActionMode.TopBar.Subtitle" parent="@style/TextAppearance.Vitamin.Subtitle1">
        <item name="android:textColor">?attr/vtmnContentPrimaryReversed</item>
    </style>

    <!-- Customization applied on an overlay in top of a Toolbar -->
    <eat-comment />

    <style name="ThemeOverlay.Vitamin.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">?attr/vtmnContentPrimaryReversed</item>
        <item name="colorAccent">?attr/vtmnContentAction</item>
        <item name="colorControlNormal">?attr/vtmnContentPrimaryReversed</item>
    </style>

    <!-- Customization applied on the icon used when there is an overflow in the Toolbar menu -->
    <eat-comment />

    <style name="Widget.Vitamin.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_vtmn_more_2_line</item>`
        <item name="android:src">@drawable/ic_vtmn_more_2_line</item>
    </style>

    <!-- Customization of the search view inside a Toolbar -->
    <eat-comment />

    <style name="Widget.Vitamin.TopBar.Search" parent="@style/Widget.Vitamin.TopBar">
        <item name="contentInsetStart">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Vitamin.TopBar.Search</item>
    </style>

    <style name="ThemeOverlay.Vitamin.TopBar.Search" parent="">
        <item name="colorOnPrimary">?attr/vtmnContentTertiary</item>
    </style>

    <style name="Widget.Vitamin.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_vtmn_close_line</item>
        <item name="searchIcon">@drawable/ic_vtmn_search_line</item>
        <item name="searchHintIcon">@drawable/ic_vtmn_search_line</item>
        <item name="goIcon">@drawable/ic_vtmn_check_line</item>
        <item name="voiceIcon">@drawable/ic_vtmn_mic_vtmn_line</item>
        <item name="iconifiedByDefault">false</item>
    </style>
</resources>