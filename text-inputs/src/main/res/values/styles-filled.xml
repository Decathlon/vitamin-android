<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Vitamin.TextInputLayout.FilledBox" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/vtmn_filled_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="boxBackgroundColor">@color/vtmn_filled_background_color</item>

        <item name="hintTextColor">@color/vtmn_filled_hint_color</item>
        <item name="android:textColorHint">@color/vtmn_filled_hint_color</item>
        <item name="startIconTint">@color/vtmn_outlined_text</item>
        <item name="endIconTint">@color/vtmn_outlined_text</item>

        <item name="helperTextTextColor">@color/vtmn_filled_helper_color</item>
        <item name="errorIconDrawable">@drawable/ic_vtmn_error_warning_line</item>
        <item name="errorTextColor">?attr/vtmnContentNegative</item>
        <item name="errorIconTint">?attr/vtmnContentNegative</item>

        <item name="counterOverflowTextColor">?attr/vtmnContentNegative</item>

        <item name="counterTextColor">@color/vtmn_filled_counter_color</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Vitamin.TextInputEditText.FilledBox
        </item>
    </style>

    <style name="ThemeOverlay.Vitamin.TextInputEditText.FilledBox" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/Widget.Vitamin.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.Vitamin.TextInputEditText.FilledBox" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@color/vtmn_filled_text</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

</resources>