<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Vitamin.RatingView">
        <item name="vtmnRatingView_noteTextAppearance">?attr/vtmnTextAppearanceBodyBoldText3</item>
        <item name="vtmnRatingView_commentsCountTextAppearance">@style/TextAppearance.Vitamin.Ratings.Comments</item>
        <item name="vtmnRatingView_defaultIconsColor">?attr/vtmnContentColorPrimary</item>
        <item name="vtmnRatingView_emphasisIconsColor">?attr/vtmnContentColorActive</item>
        <item name="vtmnRatingView_compactIcon">@drawable/ic_vtmn_star_fill</item>
    </style>

    <style name="Widget.Vitamin.RatingView.Bar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/vtmn_ratings_star</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="TextAppearance.Vitamin.Ratings.Comments" parent="TextAppearance.Vitamin.Body.Regular.Text3">
        <item name="android:textColor">?attr/vtmnContentColorSecondary</item>
    </style>

</resources>