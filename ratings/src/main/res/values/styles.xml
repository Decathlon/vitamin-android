<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Vitamin.RatingView">
        <item name="vtmnRatingView_noteTextAppearance">@style/TextAppearance.Vitamin.Ratings.Note</item>
        <item name="vtmnRatingView_commentsCountTextAppearance">@style/TextAppearance.Vitamin.Ratings.Comments</item>
        <item name="vtmnRatingView_defaultIconsColor">?attr/vtmnContentPrimary</item>
        <item name="vtmnRatingView_emphasisIconsColor">?attr/vtmnContentActive</item>
        <item name="vtmnRatingView_compactIcon">@drawable/ic_vtmn_star_fill</item>
    </style>

    <style name="Widget.Vitamin.RatingView.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/vtmn_rating_star</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="TextAppearance.Vitamin.Ratings.Note" parent="TextAppearance.Vitamin.Body3">
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TextAppearance.Vitamin.Ratings.Comments" parent="TextAppearance.Vitamin.Body3">
        <item name="android:textColor">?attr/vtmnContentSecondary</item>
    </style>

</resources>