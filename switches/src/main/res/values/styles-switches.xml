<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Vitamin.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Vitamin.Switch</item>
        <item name="android:textAppearance">?attr/vtmnTextAppearanceBodyRegularText2</item>
        <item name="android:textColor">@color/vtmn_switches_text</item>
    </style>

    <style name="ThemeOverlay.Vitamin.Switch" parent="">
        <!-- Used by SwitchMaterial for the Track -->
        <item name="colorOnSurface">?attr/vtmnContentColorPrimary</item>
        <!-- Used by SwitchMaterial for the Thumb unchecked -->
        <item name="colorSurface">?attr/vtmnBackgroundColorSecondary</item>
        <!-- Used by SwitchMaterial for the Thumb checked -->
        <item name="colorControlActivated">?attr/vtmnContentColorActive</item>
    </style>

    <style name="Widget.Vitamin.Switch.Dark" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Vitamin.Switch.Dark</item>
        <item name="android:textAppearance">?attr/vtmnTextAppearanceBodyRegularText2</item>
        <item name="android:textColor">@color/vtmn_switches_text</item>

    </style>

    <style name="ThemeOverlay.Vitamin.Switch.Dark" parent="">

        <!-- Used by SwitchMaterial for the Track -->
        <item name="trackTint">@color/track_selector</item>
        <item name="thumbTint">@color/thumb_selector</item>
    </style>

</resources>